

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/tabcontent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@android:id/tabs"
        android:layout_marginBottom="-10dp"
        android:layout_alignParentTop="true">

        </FrameLayout>

    <!--<TabWidget-->
    <!--android:id="@android:id/tabs"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="@dimen/tab_height"-->
    <!--android:layout_alignParentBottom="true"-->
    <!--android:background="#cccccc"-->
    <!--android:showDividers="none"-->
    <!--android:orientation="horizontal"></TabWidget>-->
    <RadioGroup
        android:id="@android:id/tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/tab_bg"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/tab_timeline"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:text="作品"
            android:checked="true"
            android:textColor="@color/tab_text_color"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/ic_tab_works"
            android:button="@null"
            android:padding="5dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/tab_messsage"
            android:text="标签"
            android:textColor="@color/tab_text_color"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/ic_tab_lable"
            android:button="@null"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
        <TextView android:layout_height="match_parent" android:id="@+id/btn_draw" android:layout_width="match_parent" android:layout_weight="1"></TextView>
        <RadioButton
            android:id="@+id/tab_discover"
            android:text="通知"
            android:layout_width="match_parent"
            android:textColor="@color/tab_text_color"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:drawableTop="@drawable/ic_tab_notification"
            android:button="@null"
            android:padding="5dp"
            android:layout_height="match_parent"/>
        <RadioButton
            android:id="@+id/tab_me"
            android:text="个人"
            android:gravity="center_horizontal"
            android:textColor="@color/tab_text_color"
            android:drawableTop="@drawable/ic_tab_personal"
            android:button="@null"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="match_parent"/>
    </RadioGroup>

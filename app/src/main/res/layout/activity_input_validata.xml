<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffb5b5b5">


    <TextView
        android:id="@+id/retry"
        android:textColor="#000000"
        android:layout_above="@id/edit_container"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/hint"
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:textSize="24sp"
        android:gravity="center"
        android:layout_above="@id/retry"
        android:layout_height="wrap_content"
        android:text="验证码短信已经发送" />
    <LinearLayout
        android:id="@+id/edit_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <EditText
            android:id="@+id/validata_code"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#ffffff"
            android:cursorVisible="false"
            android:gravity="center"
            android:hint="@string/input_valicode_hint"
            android:imeActionLabel="@string/btn_next"
            android:imeOptions="actionNext"
            android:inputType="phone"
            android:numeric="integer"
            android:singleLine="true" />

        <Button
            android:id="@+id/btn_next"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:textColor="@color/reg_btn_text_color"
            android:textStyle="bold"
            android:textSize="22sp"
            android:background="@drawable/btn_background"
            android:gravity="center"
            android:text="@string/btn_next" />
    </LinearLayout>
</RelativeLayout>
